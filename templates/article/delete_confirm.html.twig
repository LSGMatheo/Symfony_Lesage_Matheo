{% extends 'home.html.twig' %}

{% block title %}Confirmation de Suppression{% endblock %}

{% block maincontent %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Confirmation de Suppression</h2>
        </div>
        <div class="card-body">
            <p>Êtes-vous sûr de vouloir supprimer l'article suivant ?</p>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Texte</th>
                        <th>Date</th>
                        <th>Publié</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.texte }}</td>
                        <td>{{ article.date|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if (article.publie) %}
                                {{ ux_icon('bi:check2-square') }}
                            {% else %}
                                {{ ux_icon('bi:square') }}
                            {% endif %}
                        </td>
                    </tr>
                </tbody>    
            </table>
        </div>
        <div class="card-footer text-end">
            <a href="/article/list" class="btn btn-secondary">Annuler</a>
            <form action="/article/delete/{{ article.id }}" method="post" style="display: inline;">
                <button type="submit" class="btn btn-danger">Confirmer la Suppression</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
