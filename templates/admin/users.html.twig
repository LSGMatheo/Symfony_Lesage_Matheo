{% extends 'home.html.twig' %}

{% block title %}Liste des Users{% endblock %}

{% block maincontent %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Liste des Articles</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>email</th>
                        <th>Role</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    {% for aff_user in users %}
                    <tr>
                        <td>
                            <a href="/admin/show/{{ aff_user.id }}" class="btn btn-sm btn-outline-primary">
                                {{ aff_user.id }}
                            </a>
                        </td>
                        <td>{{ aff_user.email }}</td>
                        <td>{{ aff_user.roles|join(', ') }}</td>
                        <td>{{ aff_user.password }}</td>
                    </tr>
                    {% endfor %}
                </tbody>    
            </table>
        </div>
    </div>
</div>
{% endblock %}
